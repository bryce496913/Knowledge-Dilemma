<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Final Score TextView -->
        <TextView
            android:id="@+id/textViewFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Final Score: 0"
            android:textSize="20sp" />

        <!-- Enter Name EditText -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewFinalScore"
            android:layout_marginTop="24dp"
            android:hint="Enter Your Name"
            android:inputType="text"
            android:padding="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Submit High Score Button -->
        <Button
            android:id="@+id/buttonSubmitHighScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextName"
            android:layout_marginTop="24dp"
            android:text="Submit High Score"
            android:textSize="18sp" />

        <!-- Try Again Button -->
        <Button
            android:id="@+id/buttonTryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonSubmitHighScore"
            android:layout_marginTop="16dp"
            android:text="Try Again"
            android:textSize="18sp" />

        <!-- Main Menu Button -->
        <Button
            android:id="@+id/buttonMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonTryAgain"
            android:layout_marginTop="16dp"
            android:text="Main Menu"
            android:textSize="18sp" />

        <!-- High Score Button -->
        <Button
            android:id="@+id/buttonHighScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonMainMenu"
            android:layout_marginTop="16dp"
            android:text="High Score"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>
